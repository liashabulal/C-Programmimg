#include<stdio.h>
int main()
{
    int a[10],n,i;
    printf("Enter the size of the array:\n");
    scanf("%d",&n);

    printf("Enter the elements of the array:\n");
    for(i=0;i<n;i++)
    scanf("%d\n",&a[i]);
    
    printf("The elements are:\n");
    for(i=0;i<n;i++)
    {
        printf("%d\t",a[i]);
    }

    printf("\nThe elements in reverse order:\n");
    for(i=n-1;i>=0;i--)
    {
        printf("%d\t",a[i]);
    }
}
